# Variables
let name be "EzScript"
let version be 0.2

# Print with interpolation
print("Welcome to {name} v{version}")

# If condition
if version greater than 0.1:
    print("You are using the beta version")

# Loop
loop 5 times:
    print("Loop index is {loop_index}")

# While loop
let counter be 3
while counter greater than 0:
    print(counter)
    let counter be counter - 1

print("Done!")
