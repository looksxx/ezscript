{
  "name": "ezscript",
  "displayName": "EzScript",
  "description": "EzScript language support with built-in interpreter",
  "version": "0.2.3",
  "publisher": "Shreyan",
  "icon": "icon/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/ezscript-vscode"
  },
  "galleryBanner": {
    "color": "#21214C",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "ezscript",
    "scripting",
    "beginner-friendly",
    "educational"
  ],
  "activationEvents": [
    "onLanguage:ezscript",
    "onCommand:ezscript.run"
  ],
  "main": "./extension.js",
  "contributes": {
    "languages": [
      {
        "id": "ezscript",
        "aliases": [
          "EzScript",
          "ezscript"
        ],
        "extensions": [
          ".ez"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./assets/icon.png",
          "dark": "./assets/icon.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "ezscript",
        "scopeName": "source.ez",
        "path": "./syntaxes/ezscript.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "ezscript",
        "path": "./snippets/ezscript.json"
      }
    ],
    "commands": [
      {
        "command": "ezscript.run",
        "title": "Run EzScript File",
        "category": "EzScript",
        "icon": "$(play)"
      },
      {
        "command": "ezscript.runInTerminal",
        "title": "Run in Terminal",
        "category": "EzScript"
      }
    ],
    "keybindings": [
      {
        "command": "ezscript.run",
        "key": "ctrl+shift+e",
        "mac": "cmd+shift+e",
        "when": "editorLangId == ezscript"
      },
      {
        "command": "ezscript.run",
        "key": "f5",
        "when": "editorLangId == ezscript"
      }
    ],
    "menus": {
      "editor/title/run": [
        {
          "command": "ezscript.run",
          "when": "resourceLangId == ezscript",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "ezscript.run",
          "when": "resourceLangId == ezscript",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "ezscript.run",
          "when": "editorLangId == ezscript"
        }
      ]
    },
    "debuggers": [
      {
        "type": "ezscript",
        "label": "EzScript Debugger",
        "configurationAttributes": {
          "launch": {
            "required": [
              "program"
            ],
            "properties": {
              "program": {
                "type": "string",
                "description": "The EzScript file to run"
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "ezscript",
            "request": "launch",
            "name": "Run EzScript",
            "program": "${file}"
          }
        ]
      }
    ],
    "configuration": {
      "title": "EzScript",
      "properties": {
        "ezscript.showExecutionMessage": {
          "type": "boolean",
          "default": true,
          "description": "Show message when executing EzScript files"
        },
        "ezscript.clearTerminalBeforeRun": {
          "type": "boolean",
          "default": false,
          "description": "Clear terminal before running script"
        }
      }
    }
  }
}
